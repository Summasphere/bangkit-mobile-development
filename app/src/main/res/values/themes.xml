<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Summasphere" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/medium_blue</item>
        <item name="colorSecondaryVariant">@color/medium_blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.Summasphere" parent="Base.Theme.Summasphere" />

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/dark_blue</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo_summasphere_animated</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.Summasphere</item>
    </style>

    <style name="TextStyle"/>

    <style name="TextStyle.TITLE_ONBOARDING">
        <item name="fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white_grey</item>
    </style>

    <style name="TextStyle.TITLE_LOGIN_SIGNUP">
        <item name="fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white_grey</item>
    </style>

    <style name="TextStyle.TITLE">
        <item name="fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white_grey</item>
    </style>

    <style name="TextStyle.TITLE2">
        <item name="fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black_grey</item>
    </style>

    <style name="TextStyle.SUBTITLE">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white_grey</item>
    </style>

    <style name="TextStyle.VALUE">
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/dark_blue</item>
    </style>

    <style name="TextStyle.VALUE_DATE">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black_grey</item>
    </style>

    <style name="TextStyle.VALUE_DIALOG">
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/dark_blue</item>
    </style>

    <style name="TextStyle.VALUE_PROFILE">
        <item name="fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white_grey</item>
    </style>

    <style name="TextStyle.LABEL">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white_grey</item>
    </style>

    <style name="TextStyle.BUTTON">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white_grey</item>
    </style>

    <style name="TextStyle.BUTTON_TITLE">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white_grey</item>
    </style>

    <style name="TextStyle.BUTTON_SUBTITLE">
        <item name="fontFamily">@font/montserrat_light</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white_grey</item>
    </style>

    <style name="TextStyle.INPUT">
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">@color/white_grey</item>
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="TextStyle.SEARCH_VIEW">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColorHint">@color/dark_grey</item>
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="TextStyle.EDIT_TEXT">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColorHint">@color/dark_grey</item>
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="AppBarStyle">
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>

    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/dark_blue</item>
        <item name="boxStrokeColor">@color/medium_blue</item>
        <item name="android:textColorHint">@color/white_grey</item>
    </style>

    <style name="CustomTabTextAppearance" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/montserrat_semibold</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BottomNavItemActiveIndicatorStyle">
        <item name="android:color">@color/light_blue</item>
    </style>

    <style name="BottomNavigationTextAppearanceActive" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/light_blue</item>
    </style>

    <style name="BottomNavigationTextAppearanceInactive" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white_grey</item>
    </style>


</resources>